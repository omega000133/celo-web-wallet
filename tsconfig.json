{
    "compilerOptions": {
        "baseUrl": ".",
        "outDir": "./dist/",
        "sourceMap": true,
        "strict": true,
        "noImplicitReturns": true,
        "noImplicitAny": true,
        "module": "es2020",
        "moduleResolution": "node",
        "target": "es2020",
        "allowJs": true,
        "allowSyntheticDefaultImports": false,
        "jsx": "preserve",
    },
    "include": [
        "./src/**/*"
    ],
    "exclude": [
      "node_modules"
    ]
}