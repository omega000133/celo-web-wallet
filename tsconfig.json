{
    "compilerOptions": {
        "allowJs": true,
        "allowSyntheticDefaultImports": false,
        "baseUrl": ".",
        "incremental": true,
        "jsx": "preserve",
        "module": "es2020",
        "moduleResolution": "node",
        "noImplicitReturns": true,
        "noImplicitAny": true,
        "outDir": "./dist/",
        "skipLibCheck": true,
        "sourceMap": true,
        "strict": true,
        "target": "es2020",
    },
    "include": [ "src" ],
    "exclude": [
        "**/node_modules",
        "**/.*/",
    ]
}